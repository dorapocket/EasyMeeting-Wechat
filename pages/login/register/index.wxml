<!--pages/admin/meetingRoom/add.wxml-->
<view class="page" data-weui-theme="{{theme}}">
  <view id="page" class="weui-form text {{selectPeopleDialog?'bodyLock':''}}"
    style="width:100%;{{'top:'+pageTop+'px'}}">
    <view class="weui-form__text-area">
      <h2 class="weui-form__title bold">注册</h2>

    </view>
    <view class="weui-form__control-area">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells__title">基本信息</view>
        <view class="weui-cells weui-cells_form">
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">用户名</label></view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="您的用户名" bindinput="onUsernameChange" placeholder-class="weui-input__placeholder" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">真实姓名</label></view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="仅用于会议展示" bindinput="onRealnameChange" placeholder-class="weui-input__placeholder" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">邮箱</label></view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="邮箱" bindinput="onEmailChange" placeholder-class="weui-input__placeholder" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">电话号码</label></view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="中国大陆手机号" bindinput="onTelephoneChange" placeholder-class="weui-input__placeholder" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">密码</label></view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="" password bindinput="onPasswordChange" placeholder-class="weui-input__placeholder" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">确认密码</label></view>
            <view class="weui-cell__bd">
              <input class="weui-input" placeholder="" password bindinput="onPasswordReChange" placeholder-class="weui-input__placeholder" />
            </view>
          </view>
<!--      <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">容纳人数</label></view>
            <view class="weui-cell__bd">
              <input class="weui-input" type="number" placeholder="5" bindinput="onMaxpeopleChange" placeholder-class="weui-input__placeholder" />
            </view>
          </view>-->
        </view>
      </view>
      
      
    </view>
    <view class="weui-form__tips-area">
      <view class="weui-form__tips">
        点击按钮代表您已同意用户许可协议
      </view>
    </view>
    <view class="weui-form__opr-area">
      <a class="weui-btn weui-btn_primary" bindtap="submit">注册</a>
    </view>

    <view class="weui-form__extra-area">
      <view class="weui-footer">
        <view class="weui-footer__text">EasyMeeting 会易 v1.0</view>
      </view>
    </view>
  </view>

  
</view>